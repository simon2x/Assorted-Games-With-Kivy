<FitLabel>:
    bcolor: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    on_size: self.on_texture_size()


<MenuScreen>:
